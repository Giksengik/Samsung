        tools:layout_editor_absoluteX="324dp"
        tools:layout_editor_absoluteY="411dp">

        <TextView
            android:id="@+id/valueOfLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
